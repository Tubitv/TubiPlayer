<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button android:id="@+id/activity_selection_play_hls_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play HLS 1(DoubleViewTubiPlayerActivity)"/>
    <Button android:id="@+id/activity_selection_play_hls_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play HLS No Subtitles(DoubleViewTubiPlayerActivity)"/>

    <Button android:id="@+id/show_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Vpaid"/>

    <Button android:id="@+id/show_pre_roll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play HLS with pre-roll(RealActivity)"/>
</LinearLayout>